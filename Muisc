using System;
using System.Collections.Generic;

class MusicManager
{
    private Dictionary<string, string> areaMusic = new Dictionary<string, string>();
    private string currentTrack = "";

    public MusicManager()
    {
        // Set up music tracks for different maps/areas
        areaMusic["Forest"] = "forest_theme.mp3";
        areaMusic["Desert"] = "desert_theme.mp3";
        areaMusic["Castle"] = "castle_theme.mp3";
        areaMusic["Town"] = "town_theme.mp3";
    }

    public void EnterArea(string areaName)
    {
        if (areaMusic.TryGetValue(areaName, out string musicTrack))
        {
            if (currentTrack != musicTrack)
            {
                PlayMusic(musicTrack);
                currentTrack = musicTrack;
            }
            else
            {
                Console.WriteLine($"Already playing {musicTrack}.");
            }
        }
        else
        {
            Console.WriteLine($"No music assigned for area: {areaName}");
        }
    }

    private void PlayMusic(string trackName)
    {
        // Placeholder for playing music
        Console.WriteLine($"Playing music: {trackName}");
        // You would hook into your real audio system here
    }
}

// Example usage
class Program
{
    static void Main(string[] args)
    {
        MusicManager musicManager = new MusicManager();

        musicManager.EnterArea("Forest");
        musicManager.EnterArea("Town");
        musicManager.EnterArea("Castle");
        musicManager.EnterArea("Forest"); // Shouldn't restart if already playing
        musicManager.EnterArea("UnknownArea"); // No music assigned
    }
}
