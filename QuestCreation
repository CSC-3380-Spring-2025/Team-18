using Godot;
using System;
using System.Collections.Generic;

// Represents the current state of a quest
public enum QuestStatus { NotStarted, InProgress, Completed }

// A single quest objective
public class Objective {
    public string Description { get; set; }
    public bool IsCompleted { get; set; }

    public Objective(string description) {
        Description = description;
        IsCompleted = false;
    }
}

// The quest data model
public class Quest {
    public string Id { get; set; }
    public string Title { get; set; }
    public string Description { get; set; }
    public List<Objective> Objectives { get; set; }
    public QuestStatus Status { get; set; }

    public Quest(string id, string title, string description, List<Objective> objectives) {
        Id = id;
        Title = title;
        Description = description;
        Objectives = objectives;
        Status = QuestStatus.NotStarted;
    }
}
